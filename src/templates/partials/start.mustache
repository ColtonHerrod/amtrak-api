          }

          & station-spacer {
            margin: -0.5rem 0;
          }
        }

        & train-station {
          display: block;

          & station-dot {
            border-radius: 2rem;
            display: block;
            height: 1.5rem;
            width: 1.5rem;
            background-color: red;
          }
        }
      }
