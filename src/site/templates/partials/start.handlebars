    <style type="text/css">
      html {
        font-family: "Public Sans";
      }

      single-train {
        display: block;
      }

      train-track {
        display: flex;

        &.horizontal {
          border-radius: 2rem;
          height: 1rem;

          & train-station {
            & station-dot {
              margin-top: -.25rem;
            }
          }

          & station-spacer {
            margin: 0 -0.5rem;
          }
        };

        &.vertical {
          width: 1rem;
          height: 100%;

          & train-station {
            & station-dot {
              margin-left: -.25rem;
            }
          }

          & station-spacer {
            margin: -0.5rem 0;
          }
        }

        & train-station {
          display: block;

          & station-dot {
            border-radius: 2rem;
            display: block;
            height: 1.5rem;
            width: 1.5rem;
            background-color: red;
          }
        }
      }
    </style>
  </head>
